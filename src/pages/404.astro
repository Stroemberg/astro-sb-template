---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found">
    <div class="mx-auto flex min-h-screen max-w-[1600px] flex-col items-center justify-center px-4 sm:px-6 lg:px-8">
        <h1 class="mb-4 text-4xl font-bold">404</h1>
        <p class="mb-8 text-xl text-gray-600">Page not found</p>
        <a href="/" class="rounded bg-blue-600 px-6 py-3 text-white hover:bg-blue-700">
            Go back home
        </a>
    </div>
</Layout>